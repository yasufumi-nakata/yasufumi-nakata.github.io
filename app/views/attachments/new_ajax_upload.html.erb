<% html_options = {:multipart => true, :id => 'attachment_form', :target => IframeUploader::UPLOAD_KEY} -%>
<% url = url_for({:action => 'create', :wiki_id=>@page.title}.merge(params.slice(IframeUploader::UPLOAD_KEY))) -%>
<% form_tag(url, html_options) do -%>
  <style type="text/css">
  form#share_file_form table.upload_form label, form#share_file_form table.upload_form input {
    font-size: 10px;
    color: #555; }
  </style>

  <table class="upload_form">
    <tr>
      <th class="file"><%= label_tag 'attachment[uploaded_data]', _('File') %></th>
      <td class="file"><%= file_field_tag 'attachment[uploaded_data]', :size => 40 %></td>
      <td class="indicator"><%= image_tag('skip/indicator.gif', {:style => 'display:none'}) %></td>
    </tr>
    <tr>
      <td colspan="2"><%= submit_tag _('Upload') %></td>
    </tr>
  </table>
<% end -%>
