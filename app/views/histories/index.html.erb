<% content_for :contents_right do -%>
  <%= render :partial => 'wiki/navigation' %>
<% end -%>

<% content_for :contents_left do -%>
  <h2 class="topix_title"><%= icon_tag('asterisk_orange') %><%= _('History of edit') %></h2>
  <table class="normal user_info show">
    <thead>
      <tr>
        <th class="revision"></th>
        <th class="user"><%= _('UserUid|Uid')%></th>
        <th class="updated_at"><%= _('Update time')%></th>
        <th class="diff"><%= _('Diff from next')%></th>
        <th class="diff"><%= _('Diff from prev')%></th>
      </tr>
    </thead>
    <tbody>
      <% @histories.each do |history| %>
        <tr class="<%= cycle("odd", "even")%>">
          <td class="revision"><%= link_to(h(_("Show rev.%{revision}") % {:revision => history.revision}), wiki_history_path(@current_page.title, history)) %></td>
          <td><%= history.user.name %></td>
          <td class="timestamp"><%= history.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          <td><%= link_to_next_diff(@histories, history) %></td>
          <td><%= link_to_previous_diff(@histories, history) %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
<% end -%>


