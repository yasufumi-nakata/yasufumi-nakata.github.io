<div class="content">
  <h3><%= _('Reset Rassword')%></h3>
  <% form_for :user, @user, reset_password_path do |f| -%>
    <%= error_messages_for :user %>
    <%= hidden_field_tag :code, params[:code] %>
    <table>
      <tr>
        <th><%= f.label 'password', _('Password') %></th>
        <td><%= f.password_field 'password' %></td>
      </tr>
      <tr>
        <th><%= f.label 'password_confirmation', _('Confirm Password') %></th>
        <td><%= f.password_field 'password_confirmation' %></td>
      </tr>
    </table>
    <%= submit_tag _('Save') %>
  <% end -%>
</div>
